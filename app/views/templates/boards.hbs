<div class="boards-container">
  <form class="boards form-horizontal">
    <fieldset>
      <legend>Create board</legend>
      <div class="control-group">
        <label class="control-label" for="board-alias">Alias</label>
        <div class="controls">
          <input id="board-alias"
            name="alias"
            type="text"
            placeholder="Alias"
            class="input-xlarge"/>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="board-title">Title</label>
        <div class="controls">
          <input id="board-title"
            name="title"
            type="text"
            placeholder="Title"
            class="input-xlarge"/>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="board-description">Description</label>
        <div class="controls">
          <input id="board-description"
            name="description"
            type="text"
            placeholder="Description"
            class="input-xlarge"/>
        </div>
      </div>
      <div class="form-actions">
        <input class="btn btn-primary board-submit" type="submit" value="Create board"/>
      </div>
    </fieldset>
  </form>
  <div class="boards">
  </div>
</div>